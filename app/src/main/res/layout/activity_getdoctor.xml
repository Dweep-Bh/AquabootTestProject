<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".getdoctor.GetDoctor">



    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Appointment Schedule"
        android:gravity="center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="#EFE68D"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tv_select_date"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:hint="mm/dd/yyyy"
            android:textColor="@color/black"
            android:textColorLink="@android:color/background_dark"
            android:textSize="22dp" />



        <Button
            android:id="@+id/chooseherebutton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-32dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/tv_select_date"
            android:text="Choose Here"
            android:textColor="#8A1111"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Search"
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/List_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
